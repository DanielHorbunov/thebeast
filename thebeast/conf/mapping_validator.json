{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$defs":
    {
        "fqcn":
        {
            "$id": "/definitions/fqcn",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "string",
            "pattern": "(?i)^(\\w+)\\.((\\w+).)*(\\w+)$"
        },
        "collection":
        {
            "$id": "/schemas/collection",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties":
            {
                "path":
                {
                    "type": "string",
                    "description": "jmespath to apply to the current level of the document to retrieve a collection"
                },
                "entities":
                {
                    "type": "object",
                    "patternProperties":
                    {
                        "":
                        {
                            "$ref": "/schemas/entity"
                        }
                    }
                }
            },
            "required":
            [
                "path",
                "entities"
            ]
        },
        "entity":
        {
            "$id": "/schemas/entity",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties":
            {
                "schema":
                {
                    "type": "string",
                    "description": "Name of the FTM entity to yield"
                },
                "keys":
                {
                    "type": "array",
                    "items":
                    {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "properties":
                {
                    "type": "object",
                    "patternProperties":
                    {
                        "": {
                            "anyOf":[
                               { "$ref": "/schemas/property" },
                                { "$ref": "/schemas/properties" }
                            ]
                        }
                    }
                }
            },
            "required":
            [
                "schema",
                "keys",
                "properties"
            ]
        },
        "constant_entity":
        {
            "$id": "/schemas/constant_entity",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties":
            {
                "schema":
                {
                    "type": "string",
                    "description": "Name of the FTM entity to yield"
                },
                "keys":
                {
                    "type": "array",
                    "items":
                    {
                        "type": "string"
                    },
                    "minItems": 1,
                    "uniqueItems": true
                },
                "properties":
                {
                    "type": "object",
                    "patternProperties":
                    {
                        "": {
                            "anyOf":[
                               { "$ref": "/schemas/constant_property" },
                                { "$ref": "/schemas/constant_properties" }
                            ]
                        }
                    }
                }
            },
            "required":
            [
                "schema",
                "keys",
                "properties"
            ]
        },
        "property":
        {
            "$id": "/schemas/property",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties":
            {
                "column":
                {
                    "type": "string",
                    "description": "A jmespath to extract value(-s) for a given FTM field on a current subdocument"
                },
                "template":
                {
                    "type": "string",
                    "description": "Jinja2 template which can resolve variables through the jmespath"
                },
                "literal":
                {
                    "type": ["string", "number"],
                    "description": "A string literal or number to add to all the entities generated from current collection"
                },
                "regex":
                {
                    "type": "string",
                    "format": "regex",
                    "description": "regex to apply to extracted values"
                },
                "split_regex":
                {
                    "type": "string",
                    "format": "regex",
                    "description": "regex to split extracted values with"
                }
            },
            "oneOf":
            [
                {
                    "required":
                    [
                        "column"
                    ]
                },
                {
                    "required":
                    [
                        "template"
                    ],
                    "not":
                    {
                        "required":
                        [
                            "regex",
                            "split_regex"
                        ]
                    }
                },
                {
                    "required":
                    [
                        "literal"
                    ],
                    "not":
                    {
                        "required":
                        [
                            "regex",
                            "split_regex"
                        ]
                    }
                }
            ]
        },
        "properties":
        {
            "$id": "/schemas/properties",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "/schemas/property" }
        },
        "constant_property":
        {
            "$id": "/schemas/constant_property",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties":
            {
                "literal":
                {
                    "type": ["string", "number"],
                    "description": "A string literal or number to add to all the entities generated from current collection"
                }
            },
            "required":
            [
                "literal"
            ]

        },
        "constant_properties":
        {
            "$id": "/schemas/constant_properties",
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "/schemas/constant_property" }
        }
    },
    "type": "object",
    "properties":
    {
        "id":
        {
            "type": "string",
            "description": "(Somewhat) unique id of the mapping"
        },
        "meta":
        {
            "type": "object",
            "properties":
            {
                "comments":
                {
                    "type": "string",
                    "description": "Optional comments"
                },
                "author":
                {
                    "type": "string",
                    "description": "Optional reference to the mapping authors"
                },
                "created":
                {
                    "type": "string",
                    "format": "date-time"
                },
                "modified":
                {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "ftm_ontology":
        {
            "type": "string",
            "description": "Optional path to the dir with a custom FTM ontology to use"
        },
        "ingest":
        {
            "type": "object",
            "properties":
            {
                "cls":
                {
                    "description": "Fully qualified python class name, which is derived from AbstractIngestor",
                    "allOf":
                    [
                        {
                            "$ref": "/definitions/fqcn"
                        }
                    ]
                },
                "params":
                {
                    "type": "object",
                    "properties":
                    {
                        "input_uri":
                        {
                            "type": "string"
                        }
                    }
                }
            },
            "required":
            [
                "cls"
            ]
        },
        "digest":
        {
            "type": "object",
            "properties":
            {
                "collections":
                {
                    "type": "object",
                    "patternProperties":
                    {
                        "":
                        {
                            "$ref": "/schemas/collection"
                        }
                    }
                },
                "cls":
                {
                    "description": "Fully qualified python class name for the digestor",
                    "default": "thebeast.digest.SingleThreadedDigestor",
                    "allOf":
                    [
                        {
                            "$ref": "/definitions/fqcn"
                        }
                    ]
                },
                "constant_entities": {
                    "type": "object",
                    "description": "Entities that should be generated for the file, but not from the data",
                    "patternProperties":
                    {
                        "":
                        {
                            "$ref": "/schemas/constant_entity"
                        }
                    }
                }
            },
            "required":
            [
                "collections"
            ]
        },
        "dump":
        {
            "type": "object",
            "properties":
            {
                "cls":
                {
                    "description": "Fully qualified python class name dumper, which is derived from []",
                    "allOf":
                    [
                        {
                            "$ref": "/definitions/fqcn"
                        }
                    ]
                },
                "params":
                {
                    "type": "object",
                    "properties":
                    {
                        "output_uri":
                        {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "required":
    [
        "id",
        "ingest",
        "digest",
        "dump"
    ]
}